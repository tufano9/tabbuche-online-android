<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <com.devspark.robototextview.widget.RobotoTextView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar_cliente"
        android:layout_marginTop="50dp"
        app:fontFamily="roboto"
        app:textWeight="medium"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/seleccionar_cliente"
        android:id="@+id/textView39"
        android:layout_marginTop="50dp"
        style="@style/texto_galeria_2" />-->

    <AutoCompleteTextView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:hint="@string/buscar_cliente"
        android:id="@+id/autoCompleteTextView_buscarCliente"
        android:layout_marginTop="20dp" />

    <ListView
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/listView_clientes"
        android:layout_marginBottom="100dp"
        android:layout_marginTop="20dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:headerDividersEnabled="false" />
</LinearLayout>