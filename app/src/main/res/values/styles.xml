<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!--<style name="barra_lateral" parent="@android:style/Theme.Holo.Light">
        <item name="android:activatedBackgroundIndicator">@drawable/list_activated_background</item>
    </style>-->

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <!--<item name="android:buttonStyle">@style/RobotoButtonStyle</item>-->
    </style>

    <style name="etiqueta">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="etiqueta_link">
        <item name="android:typeface">normal</item>
        <item name="android:textColor">#0069F6</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Tema de la aplicacion personalizado. -->
    
    <style name="CustomTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowBackground">@null</item>
        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:typeface">serif</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <!--<item name="android:buttonStyle">@style/RobotoButtonStyle</item>-->
	</style>
	
    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
    	<item name="android:fontFamily">sans-serif</item>
	</style>

    <style name="texto_galeria_1" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="texto_galeria_2" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="texto_pedido_1" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="texto_pedido_2" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="texto_pedido_3" parent="android:Widget.TextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
    </style>
	
    <style name="RobotoButtonStyle" parent="android:Widget.Holo.Button">
    	<item name="android:fontFamily">sans-serif</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:textColor">#000000</item>
	</style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ButtonText_normal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="BorderLayout" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Estilo para el menu principal dashboard. -->
	
    <style name="dashboard_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/buttonselector</item>
        <item name="android:padding">1dp</item>
        <item name="android:drawablePadding">8dp</item> 
    </style>
    
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">#0069F6</item> <!-- #AC67A8 (MORADO)  -->
        <item name="android:textColor">#FFFFFF</item>
    </style>
    
    <style name="texto_tamano1">
        <item name="android:textSize">34sp</item>
	</style>
    
    <style name="texto_tamano2">
        <item name="android:textSize">18sp</item>
	</style>

    <style name="texto_muestrario">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/azulogo</item>
    </style>
	
    <style name="color1">
        <item name="android:background">#131313</item>
	</style>
    
    <style name="color2">
        <item name="android:background">#151515</item>
	</style>

    <style name="TwoWayView">
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
