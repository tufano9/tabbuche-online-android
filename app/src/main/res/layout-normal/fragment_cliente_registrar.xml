<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView5">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:gravity="right">

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/razon_social"
                    android:layout_marginTop="10dp"
                    app:fontFamily="roboto"
                    app:textWeight="medium"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/razon_social"
                    android:id="@+id/textView12"
                    style="@style/texto_galeria_1"
                    android:textStyle="normal"
                    android:layout_marginTop="10dp" />-->

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rif"
                    android:layout_marginTop="30dp"
                    app:fontFamily="roboto"
                    app:textWeight="medium"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rif"
                    android:id="@+id/textView14"
                    style="@style/texto_galeria_2"
                    android:layout_marginTop="20dp" />-->

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direccion"
                    android:layout_marginTop="30dp"
                    app:fontFamily="roboto"
                    app:textWeight="medium"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/direccion"
                    android:id="@+id/textView16"
                    style="@style/texto_galeria_2"
                    android:layout_marginTop="30dp" />-->

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telefono"
                    android:layout_marginTop="30dp"
                    app:fontFamily="roboto"
                    app:textWeight="medium"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/telefono"
                    android:id="@+id/textView18"
                    style="@style/texto_galeria_2"
                    android:layout_marginTop="30dp" />-->

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estado"
                    android:layout_marginTop="50dp"
                    app:fontFamily="roboto"
                    app:textWeight="medium"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/estado"
                    android:id="@+id/textView28"
                    style="@style/texto_galeria_2"
                    android:layout_marginTop="40dp" />-->

                <com.devspark.robototextview.widget.RobotoTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:layout_marginTop="40dp"
                    app:fontFamily="roboto"
                    app:textWeight="medium"
                    android:textSize="15sp"
                    android:textStyle="normal"/>

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:id="@+id/textView29"
                    style="@style/texto_galeria_2"
                    android:layout_marginTop="40dp" />-->

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/editText_razonSocial"
                    android:hint="@string/razon_social_hint"
                    android:singleLine="true"
                    android:inputType="text"
                    android:gravity="center_vertical"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    >

                    <Spinner
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner"
                        />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText_Rif1"
                        android:ems="8"
                        android:inputType="number"
                        android:maxLength="8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/guion"
                        android:id="@+id/textView23"
                        style="@style/texto_galeria_2" />

                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="2"
                        android:maxLength="1"
                        android:id="@+id/editText_Rif2" />

                </LinearLayout>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="25"
                    android:hint="@string/direccion_hint"
                    android:id="@+id/editText_direccion"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:singleLine="true"
                    android:textSize="15sp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:ems="11"
                    android:hint="@string/telefono_hint"
                    android:maxLength="11"
                    android:id="@+id/editText_telefono"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:textSize="15sp"/>

                <Spinner
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2"
                    android:layout_marginTop="30dp"
                    />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="50"
                    android:hint="@string/email_hint"
                    android:id="@+id/editText_email"
                    android:layout_marginTop="40dp"
                    android:textSize="15sp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="20dp"
                    >

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="@string/limpiar"
                        android:id="@+id/button"
                        android:background="@drawable/boton_amarillo"
                        style="@style/ButtonText_normal"
                        android:textStyle="normal"
                        android:layout_marginBottom="15dp"/>

                    <Button
                        android:layout_width="140dp"
                        android:layout_height="40dp"
                        android:text="@string/agregar_cliente"
                        android:id="@+id/button2"
                        android:background="@drawable/boton_azul"
                        style="@style/ButtonText_normal"
                        android:textStyle="normal"
                        android:layout_marginLeft="35dp"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>