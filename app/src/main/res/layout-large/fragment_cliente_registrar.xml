    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="200dp"
        android:layout_marginTop="100dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText_razonSocial"
            android:hint="@string/razon_social_hint"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:singleLine="true"
            android:inputType="text"
            android:gravity="center_vertical" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="20dp">

            <Spinner
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner"
                android:layout_marginLeft="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editText_Rif1"
                android:ems="8"
                android:inputType="number"
                android:maxLength="8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guion"
                android:id="@+id/textView23"
                style="@style/texto_galeria_2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="2"
                android:maxLength="1"
                android:id="@+id/editText_Rif2" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="25"
            android:hint="@string/direccion_hint"
            android:id="@+id/editText_direccion"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:singleLine="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="11"
            android:hint="@string/telefono_hint"
            android:maxLength="11"
            android:id="@+id/editText_telefono"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical" />

        <Spinner
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner2"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="50"
            android:hint="@string/email_hint"
            android:id="@+id/editText_email"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="100dp">

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/limpiar"
                android:id="@+id/button"
                android:background="@drawable/boton_amarillo"
                style="@style/ButtonText"
                android:textStyle="normal"
                android:layout_marginLeft="20dp" />

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="@string/agregar_cliente"
                android:id="@+id/button2"
                android:background="@drawable/boton_azul"
                style="@style/ButtonText"
                android:textStyle="normal"
                android:layout_marginLeft="100dp" />
        </LinearLayout>

    </LinearLayout>

